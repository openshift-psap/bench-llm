{
  "tags": {
    "topology": "none"
  },
  "endpoints": [
    {
      "type": "remotehosts",
      "remotes": [
        {
          "engines": [
            {
              "role": "client",
              "ids": "1"
            }
          ],
          "config": {
            "host": "hostname",
            "settings": {
              "userenv": "fedora41",
              "osruntime": "podman",
              "podman-settings": {
                "shm-size": "10.00gb"
              },
              "cpu-partitioning": false
            }
          }
        }
      ]
    }
  ],
  "run-params": {
    "num-samples": 1,
    "max-sample-failures": 1,
    "test-order": "r"
  },
  "tool-params": [
    {
      "tool": "sysstat",
      "params": [
        {
          "arg": "subtools",
          "val": "mpstat,sar,iostat"
        },
        {
          "arg": "interval",
          "val": "15"
        }
      ]
    },
    {
      "tool": "procstat",
      "params": [
        {
          "arg": "interval",
          "val": "15"
        }
      ]
    }
  ],
  "benchmarks": [
    {
      "name": "llm",
      "ids": "1",
      "mv-params": {
        "sets": [
          {
            "params": [
              {
                "arg": "guidellm_target",
                "vals": [
                  "localhost:8000"
                ]
              },
              {
                "arg": "guidellm_data",
                "vals": [
                  "prompt_tokens=128,output_tokens=128,prompt_tokens_stdev=32,output_tokens_stdev=32"
                ]
              },
              {
                "arg": "guidellm_backend",
                "vals": [
                  "openapi_http"
                ]
              },
              {
                "arg": "guidellm_model",
                "vals": [
                  "ibm-granite/granite-3.2-2b-instruct"
                ]
              },
              {
                "arg": "guidellm_rate_type",
                "vals": [
                  "sweep"
                ]
              },
              {
                "arg": "guidellm_max_seconds",
                "vals": [
                  "30"
                ]
              },
              {
                "arg": "guidellm_processor",
                "vals": [
                  "ibm-granite/granite-3.2-2b-instruct"
                ]
              },
              {
                "arg": "guidellm_max_concurrency",
                "vals": [
                  "2048"
                ]
              },
              {
                "arg": "guidellm_request_timeout",
                "vals": [
                  "300"
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
