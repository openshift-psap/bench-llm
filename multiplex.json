{
    "presets": {},
    "validations": {
        "generic_string": {
            "description": "all types of strings",
            "args": [],
            "vals": ".+"
        },
        "integer_ge_zero": {
            "description": "a whole number >= 0",
            "args": [],
            "vals": "[0-9]+"
        },
        "boolean": {
            "description": "True or False",
            "args": [],
            "vals": "True|true|False|false"
        },
        "string_no_template": {
            "description": "Ensure the string does not contain a variable placeholder '{' or '}'",
            "args": [],
            "vals": "^((?!{|}).)*$"
        }
    }
}
